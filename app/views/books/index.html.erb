<% if flash[:notice] %>
   <p class="notice-message"><%= flash[:notice] %></p>
<% end %>

<% if @book_add.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book_add.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid">
	<div class="row col-xs-12">
		<div class="col-xs-4">
			<div class="row sampleRow">
				<div class="col-xs-12">
					<h2>User info</h2>
				</div>
				<div class="col-xs-12">
					<% if @user.profile_image.present? %>
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60%>
					<% else %>
						<%= image_tag 'no-image.png', :size => '60x60' %>
					<% end %>
				</div>
				<div class="col-xs-12">
					<div class="col-xs-4">
						<p>name</p>
					</div>
					<div class="col-xs-8">
						<p><%= @user.name%></p>
					</div>
				</div>
				<div class="col-xs-12">
					<div class="col-xs-4">
						<p>introduction</p>
					</div>
					<div class="col-xs-8">
						<p><%= @user.introduction%> </p>
					</div>
				</div>
				<div class="col-xs-12">
					<p><%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "edit_user_#{current_user.id}" %></p>
				</div>
			</div>
			<%= form_for(@book_add) do |f| %>
　　　　　　　	<div class="row sampleRow">
					<div class="col-xs-12">
						<h2>New book</h2>
					</div>
					<div class="col-xs-12">
						<%= f.text_field :title, placeholder:"タイトル", class: "form-control book_title"%>
					</div>
					<div class="col-xs-12">
						<%= f.text_field :opinion, placeholder:"感想", class: "form-control book_body"%>
					</div>
					<div class="col-xs-12">
						<%= f.submit "Create book"%>
					</div>
				</div>
			<% end %>
		</div>

		<div class="col-xs-8 padding-left-5">
			<div class="row sampleRow">
				<div class="col-xs-12">
					<h2>Books</h2>
				</div>
				<div class="col-xs-3">
					<h3>Image</h3>
				</div>
				<div class="col-xs-3">
					<h3>Title</h3>
				</div>
				<div class="col-xs-6">
					<h3>Opinion</h3>
				</div>
				<% if @books.present? %>
					<% @books.each do |book| %>
						<div class="col-xs-12">
							<div class="col-xs-3">
								<% submit_user = User.find_by(id: book.user_id) %>
								<% if submit_user.profile_image.present? %>
									<%= attachment_image_tag submit_user, :profile_image, :fill, 60, 60%>
								<% else %>
									<%= image_tag 'no-image.png', :size => '60x60' %>
								<% end %>
							</div>
							<div class="col-xs-3">
								<%= link_to book.title, book_path(book.id), class: "book_#{book.id}"  %>
							</div>
							<div class="col-xs-6">
								<%= book.opinion %>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>