<!DOCTYPE html>
<html>
  <head>
    <title>NewBookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <style>
    body { padding-top: 70px; }
  </style>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            Bookers
          </a>
        </div>
    
        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "ホーム", user_path(current_user.id), class: "home" %><li>
              <li><%= link_to 'user一覧', users_path, class: "users"  %></li>
              <li ><%= link_to 'book一覧', books_path, class: "books"  %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout"  %><li>
            <% else %>
              <li class=""><%= link_to "ホーム", root_path, class: "home" %></li>
              <li class=""><%= link_to "アバウト", about_path, class: "about"  %></li>
              <li class=""><%= link_to "サインアップ", new_user_registration_path, class: "sign_up" %></li>
              <li class=""> <%= link_to "ログイン", new_user_session_path, class: "sign_in"  %></li>
          </ul>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
